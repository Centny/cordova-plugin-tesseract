<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-tesseract" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Tesseract</name>
    <js-module name="Tesseract" src="www/Tesseract.js">
        <clobbers target="cordova.plugins.Tesseract" />
    </js-module>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="Tesseract">
                <param name="android-package" value="com.github.centny.cordova.tess.Tesseract" />
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml" />
        <source-file src="src/android/Tesseract.java" target-dir="src/com/github/centny/cordova/tess" />
        <framework custom="true" src="src/android/tesseract.gradle" type="gradleReference" />
        <lib-file src="deps/android/aar/tesseract-release.aar" target="libs/tesseract.aar" />
    </platform>
    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="Tesseract">
                <param name="ios-package" value="Tesseract" />
            </feature>
        </config-file>
        <source-file compiler-flags="-std=c++11 -I../../plugins/cordova-plugin-tesseract/deps/ios/universal/include" src="src/objc/Tesseract.mm" />
        <source-file framework="true" src="deps/ios/universal/lib/libjpeg.a" />
        <source-file framework="true" src="deps/ios/universal/lib/liblept.a" />
        <source-file framework="true" src="deps/ios/universal/lib/libopenjp2.a" />
        <source-file framework="true" src="deps/ios/universal/lib/libpng.a" />
        <source-file framework="true" src="deps/ios/universal/lib/libtesseract.a" />
        <source-file framework="true" src="deps/ios/universal/lib/libtiff.a" />
        <source-file framework="true" src="deps/ios/universal/lib/libwebp.a" />
        <framework src="libz.tbd" />
    </platform>
    <platform name="osx">
        <config-file parent="/*" target="config.xml">
            <feature name="Tesseract">
                <param name="ios-package" value="Tesseract" />
            </feature>
        </config-file>
        <source-file compiler-flags="-std=c++11 -I../../plugins/cordova-plugin-tesseract/deps/osx/include" src="src/objc/Tesseract.mm" />
        <source-file framework="true" src="deps/osx/lib/libjpeg.a" />
        <source-file framework="true" src="deps/osx/lib/liblept.a" />
        <source-file framework="true" src="deps/osx/lib/libopenjp2.a" />
        <source-file framework="true" src="deps/osx/lib/libpng.a" />
        <source-file framework="true" src="deps/osx/lib/libtesseract.a" />
        <source-file framework="true" src="deps/osx/lib/libtiff.a" />
        <source-file framework="true" src="deps/osx/lib/libwebp.a" />
        <framework src="libz.tbd" />
    </platform>
    <platform name="windows">
        <js-module name="Tesseract" src="src/windows/Tesseract.js">
            <runs target="" />
        </js-module>
    </platform>
    <hook src="scripts/beforeInstall.js" type="before_plugin_install" />
</plugin>